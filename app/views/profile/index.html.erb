<div class="row">
    <div class="large-8 large-offset-2 columns">
        <h1>Profile</h1>
        <hr />
    </div>
</div>

<div id="profile" class="row">
    <div class="large-2 large-offset-2 columns">
        <%=image_tag( size_avatar(200, @profile['info']['image']) )%>
    </div>
    <div class="large-6 columns end">
        <h2><%=@profile['info']['name']%></h2>
        <%=@profile['info']['email']%>
    </div>
</div>

<div class="row">
    <div class="large-8 large-offset-2 columns">
        <div class="panel callout radius">
            <h3>Raw Profile Data</h3>
            <%#debug @profile%>
        </div>
    </div>
</div>
