<div class="row">
    <div class="large-8 large-offset-2 columns">
        <%if notice %>
        <div data-alert class="alert-box success radius">
            <%= notice %> <a href="#" class="close">&times;</a>
        </div>
        <%end%>

        <%if alert %>
        <div data-alert class="alert-box alert radius">
            <%= alert %> <a href="#" class="close">&times;</a>
        </div>
        <%end%>
    </div>
</div>
